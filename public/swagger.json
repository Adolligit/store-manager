      "delete": {
        "summary": "Deletará os dados registrados do produto",
        "tags":["Products"],
        "parameters": [
          {
            "schema": {
              "type": "number"
            },
            "required": true,
            "description": "Informe o ID do registro:",
            "name": "id",
            "in": "path"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {}
          },
          "404": {
            "description": "Not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorMessage"
                },
                "example": {
                  "message": "Product not found"
                }
              }
            }
          },
          "422": {
            "description": "Invalid ID",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorMessage"
                },
                "example": {
                  "message": "O id informado é inválido"
                }
              }
            }
          }
        }
      }
    },
    "/sales": {
      "post": {
        "summary": "Criará o registro de uma venda",
        "tags":["Sales"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "productId": {
                      "type": "number"
                    },
                    "quantity": {
                      "type": "number"
                    }
                  }
                }
              },
              "example": [
                {
                  "productId": 3,
                  "quantity": 30
                }
              ]
            }
          }
        },
        "responses": {
          "201" : {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/setNewSale"
                },
                "example": {
                  "id": 1,
                  "itemSold": [
                    {
                      "productId": 3,
                      "quantity": 30
                    }
                  ]
                }
              }
            }
          },
          "400" : {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorMessage"
                },
                "examples": {
                  "Chave não declarada": {
                    "value": {
                      "message": "\"productId\" is required"
                    }
                  },
                  "O valor deve ser number": {
                    "value": {
                      "message": "\"quantity\" must be a number"
                    }
                  },
                  "Chave não permitida": {
                    "value": {
                      "message": "\"key\" is not allowed"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorMessage"
                },
                "example": {
                  "message": "Product not found"
                }
              }
            }
          },
          "422": {
            "description": "Unprocessable Entity",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorMessage"
                },
                "example": {
                  "message": "\"quantity\" must be greater than or equal to 1"
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Retornará todos os dados das vendas",
        "tags":["Sales"],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetAllSales"
                },
                "examples": {
                  "Há registros": {
                    "value": [
                      {
                        "saleId": 1,
                        "date": "2023-07-25T18:20:29.000Z",
                        "productId": 2,
                        "quantity": 10
                      },
                      {
                          "saleId": 2,
                          "date": "2023-07-25T18:20:29.000Z",
                          "productId": 3,
                          "quantity": 15
                      },
                      {
                          "saleId": 3,
                          "date": "2023-07-28T07:27:55.000Z",
                          "productId": 3,
                          "quantity": 30
                      }
                    ]
                  },
                  "Não há registros": {
                    "value": []
                  }
                }
              }
            }
          }
        }
      }
    },
    "/sales/{id}": {
      "get": {
        "summary": "Retornará os dados da venda referente ao ID informado",
        "tags":["Sales"],
        "parameters": [
          {
            "schema": {
              "type": "number"
            },
            "in": "path",
            "name": "id",
            "description": "Informe o ID do registro:",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/getByIdSales"
                },
                "example": [
                  {
                    "date": "2023-07-28T10:31:11.000Z",
                    "productId": 1,
                    "quantity": 5
                  },
                  {
                      "date": "2023-07-28T10:31:11.000Z",
                      "productId": 2,
                      "quantity": 10
                  }
                ]
              }
            }
          },
          "404": {
            "description": "Not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorMessage"
                },
                "example": {
                  "message": "Sales not found"
                }
              }
            }
          },
          "422": {
            "description": "Invalid ID",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorMessage"
                },
                "example": {
                  "message": "O id informado é inválido"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Atualizará os dados registrados da venda",
        "tags":["Sales"],
        "parameters": [
          {
            "schema": {
              "type": "number"
            },
            "required": true,
            "description": "Informe o ID do registro:",
            "name": "id",
            "in": "path"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/putByIdSales"
              },
              "example": [
                  {
                    "productId": 3,
                    "quantity": 50
                  },
                  {
                      "productId": 1,
                      "quantity": 4
                  }
              ]
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "saleId": {
                      "type": "string"
                    },
                    "itemsUpdated": {
                      "type": "array",
                      "items": {
                        "properties": {
                          "productId": {
                            "type": "number"
                          },
                          "quantity": {
                            "type": "number"
                          }
                        }
                      }
                    }
                  }
                },
                "example": {
                  "saleId": "1",
                  "itemsUpdated": [
                    {
                        "productId": 3,
                        "quantity": 50
                    },
                    {
                        "productId": 1,
                        "quantity": 4
                    }
                  ]
                }
              }
            }
          },
          "404": {
            "description": "Not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorMessage"
                },
                "example": {
                  "message": "Sales not found"
                }
              }
            }
          },
          "422": {
            "description": "Invalid ID",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorMessage"
                },
                "example": {
                  "message": "O id informado é inválido"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Deletará os dados registrados do produto",
        "tags":["Products"],
        "parameters": [
          {
            "schema": {
              "type": "number"
            },
            "required": true,
            "description": "Informe o ID do registro:",
            "name": "id",
            "in": "path"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {}
          },
          "404": {
            "description": "Not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorMessage"
                },
                "example": {
                  "message": "Product not found"
                }
              }
            }
          },
          "422": {
            "description": "Invalid ID",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorMessage"
                },
                "example": {
                  "message": "O id informado é inválido"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateProduct": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          }
        }
      },
      "getById": {
        "type": "object",
          "properties": {
            "id": { "type": "number" },
            "name": { "type": "string" }
          }
      },
      "GetAllProducts": {
        "type": "array",
        "allOf": [{
          "$ref": "#/components/schemas/getById"
        }]
      },
      "putByIdSales": {
        "type": "array",
        "items": {
          "properties": {
            "productId": {
              "type": "number"
            },
            "quantity": {
              "type": "number"
            }
          }
        }
      },
      "getByIdSales": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
              "date": {
                "type": "string"
              },
              "productId": {
                "type": "number"
              },
              "quantity": {
                "type": "number"
              }
          }
        }
      },
      "setNewSale": {
        "type": "object",
        "properties": {
            "id": {
              "type": "number"
            },
            "itemsSold": {
              "type": "array",
              "items": {
                "properties": {
                  "productId": {
                    "type": "integer"
                  },
                  "quantity": {
                    "type": "integer"
                  }
                }
              }
            }
        }
      },
      "GetAllSales": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
              "id": {
                "type": "number"
              },
              "date": {
                "type": "string"
              },
              "productId": {
                "type": "number"
              },
              "quantity": {
                "type": "number"
              }
          }
        }
      },
      "ErrorMessage": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      }
    }
  }
} 