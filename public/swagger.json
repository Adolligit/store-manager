            "required": true,
            "description": "Informe o ID do registro:",
            "name": "id",
            "in": "path"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  }
                }
              },
              "example": {
                "name": "Coringa no manicômio"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
